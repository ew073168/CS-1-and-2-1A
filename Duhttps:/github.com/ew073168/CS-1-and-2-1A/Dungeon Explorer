        print("You found a crossbow.")
        print()
        tm.sleep(1)
        grab = input("Do you want to add it to your inventory? ")
        print()

        if(grab == "y" or grab == "Y"):
          print("You add the crossbow to your inventory.")
          print()
          inventory.append("Crossbow")
